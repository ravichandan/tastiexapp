{
  "build": {
    "android": {
      "env": {
        "ENV_FILE": ".env.android"
      }
    },
    "ios": {
      "env": {
        "ENV_FILE": ".env.ios"
      }
    },
    "preview": {
      "developmentClient": false,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "APP_ENV": "staging",
        "API_URL": "https://staging-api.foodiex.com/api"
      }
    },
    "production": {
      "developmentClient": false,
      "distribution": "store",
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-creds.json"
      },
      "ios": {
        "appleId": "your-apple-id@example.com"
      }
    }
  }
}
